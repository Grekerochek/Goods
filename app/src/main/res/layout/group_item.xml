<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:background="?selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/groupImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/groupTitleView"
        style="@style/FadeStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/groupImageView"
        app:layout_constraintTop_toTopOf="@id/groupImageView"
        app:layout_constraintBottom_toTopOf="@id/groupDescriptionView"
        tools:text="Сообщество" />

    <TextView
        android:id="@+id/groupDescriptionView"
        style="@style/FadeStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorDescription"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/groupImageView"
        app:layout_constraintTop_toBottomOf="@id/groupTitleView"
        app:layout_constraintBottom_toBottomOf="@id/groupImageView"
        tools:text="Открытая группа" />

</androidx.constraintlayout.widget.ConstraintLayout>