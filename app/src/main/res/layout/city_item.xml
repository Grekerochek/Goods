<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/cityTitleView"
        style="@style/FadeStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cityCheckView"
        app:layout_constraintHorizontal_chainStyle="spread"
        tools:text="Москва" />

    <ImageView
        android:id="@+id/cityCheckView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="@color/colorLightBlue"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_check_circle_on_24"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/cityTitleView"
        app:layout_constraintBottom_toBottomOf="@id/cityTitleView"
        app:layout_constraintStart_toEndOf="@id/cityTitleView"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>